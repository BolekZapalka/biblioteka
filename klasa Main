import java.util.HashMap;
import java.util.Scanner;

public class Main {
    private static Object Ksiazka;
    public static void main(String[] args) {
    int zakoncz = 0;
        do{
            System.out.println("Co chcesz zrobic? \n Wcisnij 'd' zeby dodac ksiazke \n Wcisnij 's' zeby zobaczyc spis \n Wcisnij 'w' zeby wypozyczyc");
        Scanner scanner = new Scanner(System.in);
        String userInput = scanner.next();
        if (userInput.equals("d")) {
           Akcje.dodajKsiazke();
        }
        if (userInput.equals("s")) {
            System.out.println(Akcje.spisKsiazek.entrySet()); //jakies chujostwo sie drukuje
        }
        if(userInput.equals("w")){
            Akcje.wypozycz();
        }
        if(userInput.equals("q")){
            zakoncz = 1;
        }
        if(userInput.equals("u")){
            Akcje.usun();
        }
    }while(zakoncz==0);
}
}
